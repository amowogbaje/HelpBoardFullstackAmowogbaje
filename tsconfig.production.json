{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/server",
    "rootDir": "./server",
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "server/production.ts",
    "server/routes.ts",
    "server/database-storage.ts",
    "server/db.ts",
    "server/ai-service.ts",
    "server/websocket.ts",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ]
}