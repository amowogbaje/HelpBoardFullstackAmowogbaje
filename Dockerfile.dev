# Development Dockerfile for HelpBoard Backend
FROM node:20-alpine

# System dependencies
RUN apk add --no-cache \
  libc6-compat \
  curl \
  git \
  postgresql-client

# App directory
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy all source
COPY . .

# Create necessary directories
RUN mkdir -p logs

# Add non-root user for safety
RUN addgroup -S nodejs && adduser -S helpboard -G nodejs && \
    chown -R helpboard:nodejs /app

USER helpboard

# Development environment variables
ENV NODE_ENV=development
ENV PORT=5000

EXPOSE 5000

# Healthcheck
HEALTHCHECK --interval=30s --timeout=10s --start-period=15s --retries=3 \
  CMD curl -f http://localhost:5000/api/health || exit 1

# Start in development mode
CMD ["npm", "run", "dev"]
