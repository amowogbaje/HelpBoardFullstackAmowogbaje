# HelpBoard Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://helpboard_user:helpboard_password_2024@db:5432/helpboard
DB_PASSWORD=helpboard_password_2024

# Redis Configuration
REDIS_URL=redis://redis:6379

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Session Configuration
SESSION_SECRET=helpboard_session_secret_2024

# Server Configuration
NODE_ENV=production
PORT=5000
TRUST_PROXY=true

# CORS Configuration
CORS_ORIGIN=http://helpboard.selfany.com,https://helpboard.selfany.com

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Monitoring and Logging
LOG_LEVEL=info
HEALTH_CHECK_INTERVAL=30